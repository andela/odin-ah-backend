{
    "name": "express-authorshaven",
    "version": "1.0.0",
    "description": "A Social platform for the creative at heart",
    "main": "index.js",
    "scripts": {
        "build": "npm run clean && babel ./ -d dist/ --ignore node_modules",
        "clean": "rimraf dist/",
        "start": "npm run build && node --require dotenv/config ./dist/server.js",
        "dev": "nodemon ./server.js --exec babel-node",
        "migration": "sequelize db:migrate",
        "migration:test": " cross-env NODE_ENV=test sequelize db:migrate",
        "pretest": "npm run lint && npm run undo && npm run migration:test",
        "test": "cross-env NODE_ENV=test nyc mocha --timeout 10000 \"tests/**/*.js\" --exit",
        "test:dev": "npm run undo && npm run migration:test && cross-env NODE_ENV=test nyc mocha \"tests/**/*.js\" --timeout 10000 --exit",
        "lint": "eslint . --fix",
        "undo": "cross-env NODE_ENV=test sequelize db:migrate:undo:all",
        "undo:dev": "sequelize db:migrate:undo:all",
        "coverage:dev": "npm run test && nyc report --reporter=text-lcov | coveralls",
        "coverage": "nyc report --reporter=text-lcov | coveralls"
    },
    "author": "Andela Simulations Programme",
    "license": "MIT",
    "dependencies": {
        "@sendgrid/mail": "^6.3.1",
        "ant-pattern-matcher": "0.0.4",
        "async": "^2.6.1",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.0.2",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-airbnb": "^2.5.1",
        "babel-preset-env": "^1.7.0",
        "babel-register": "^6.26.0",
        "bcrypt": "^3.0.1",
        "body-parser": "^1.18.3",
        "cors": "^2.8.4",
        "dotenv": "^6.0.0",
        "ejs": "^2.6.1",
        "errorhandler": "^1.5.0",
        "express": "^4.16.3",
        "express-jwt": "^5.3.1",
        "express-session": "^1.15.6",
        "jsonwebtoken": "^8.3.0",
        "method-override": "^2.3.10",
        "methods": "^1.1.2",
        "morgan": "^1.9.0",
        "nyc": "^13.0.1",
        "passport": "^0.4.0",
        "passport-facebook": "^2.1.1",
        "passport-google-oauth20": "^1.0.0",
        "passport-local": "^1.0.0",
        "passport-twitter": "^1.0.4",
        "pg": "^7.4.3",
        "pg-hstore": "^2.3.2",
        "randomstring": "^1.1.5",
        "request": "^2.87.0",
        "rimraf": "^2.6.2",
        "sequelize": "^4.38.1",
        "sequelize-cli": "^4.1.1",
        "swagger-ui-express": "^4.0.1",
        "underscore": "^1.9.1",
        "url-slug": "^2.0.0",
        "validate.js": "^0.12.0",
        "validator": "^10.8.0",
        "winston": "^3.1.0",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^9.0.0",
        "chai": "^4.1.2",
        "chai-http": "^4.2.0",
        "cross-env": "^5.2.0",
        "coveralls": "^3.0.2",
        "eslint": "^5.6.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-import": "^2.14.0",
        "mocha": "^5.2.0",
        "mocha-lcov-reporter": "^1.3.0",
        "nodemon": "^1.18.4",
        "nyc": "^13.0.1",
        "sinon": "^6.3.4",
        "sinon-chai": "^3.2.0",
        "sinon-express-mock": "^2.0.5"
    },
    "nyc": {
        "require": [
            "babel-register",
            "dotenv/config"
        ],
        "reporter": [
            "lcov",
            "text",
            "html"
        ]
    }
}
